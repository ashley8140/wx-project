.brand-info {
    padding: 30rpx 0;
}

.brand-logo {
    display: block;
    width: 200rpx;
    height: 200rpx;
    margin: 0 34rpx;
}

.brand-name {
    display: block;
    height: 200rpx;
    line-height: 200rpx;
    font-size: 40rpx;
}

.factory-name {
    display: block;
    height: 68rpx;

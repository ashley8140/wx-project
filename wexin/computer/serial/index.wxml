<!--index.wxml--><view class="container">    <view class="serial-summary">        <image mode="widthFix" class="serial-image" src="{{serial.img}}"></image>        <text class="serial-name cl">            <text class="fl">{{serial.name}}</text>            <text class="serial-level fl">{{serial.level}}</text>        </text>        <span class="serial-price">{{serial.price}}</span>    </view>    <view class="computer-filter">        <view class="sale-filter filter-group cl">            <span class="{{item.id == activeSaleStatus ? 'active ' : ''}}fl filter-item" bindtap="tabFilterSale" wx:for="{{saleNameList}}" data-id="{{item.id}}">{{item.name}}</span>        </view>        <scroll-view scroll-x="true" class="year-filter filter-group">            <span class="{{item == activeYear ? 'active ' : ''}}filter-item" bindtap="tabFilterYear" wx:for="{{yearList}}" data-id="{{item}}">{{item}}</span>        </scroll-view>    </view>    <view class="computer-list-container">        <view class="computer-group" wx:for="{{computerGroupList}}" wx:for-item="computerGroup">            <view class="group-name">{{computerGroup.title}}</view>            <view class="group-computer-list">                <view class="computer-item{{index === computerGroup.computerList.length - 1 ? ' computer-item-last' : ''}}" wx:for="{{computerGroup.computerList}}" data-id="{{item.id}}">                    <view class="computer-info cl">                        <view class="computer-left fl">                            <text class="computer-name">{{item.name}}</text>                            <text class="computer-desc">{{item.desc}}</text>                        </view>                        <view class="computer-right fr">                            <view class="computer-price" wx:if="{{item.hasPrice}}">{{item.price}}<span class="computer-price-t f3">元起</span></view>                            <view class="computer-price" wx:else>{{item.price}}</view>                            <span class="computer-guide-price" wx:if="{{item.saleStatus == 0}}">{{item.guidePrice}}</span>                        </view>                    </view>                    <view class="computer-action" wx:if="{{item.saleStatus == 0}}">                        <span class="config-button" data-id="{{item.id}}" data-type="config" bindtap="tapcomputerButton">查配置</span>                        <span class="image-button" data-id="{{item.id}}" data-type="image" bindtap="tapcomputerButton">看图片</span>                        <span class="order-button" data-id="{{item.id}}" data-type="enquiry" bindtap="tapcomputerButton">询底价</span>                    </view>                </view>            </view>        </view>    </view></view>